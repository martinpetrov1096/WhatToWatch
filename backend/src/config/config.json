{
   "port": 8080,
   "movieDbApi": {
      "discover": {
         "url": "https://api.themoviedb.org/3/discover/",
         "defaults": {
            "include_adult": false,
            "language": "en-US",
            "vote_count.gte": "400",
            "region": "US",
            "watch_region": "US",
            
            "sort_by": "popularity.desc"
         }
      },
      "details": {
         "url": "https://api.themoviedb.org/3/",
         "defaults": {
            "language": "en-US",
            "append_to_response": "videos,reviews,credits,watch/providers"
         }
      }
   }
}